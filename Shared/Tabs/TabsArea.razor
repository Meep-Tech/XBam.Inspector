@code {
    List<TabPannel> _pages = new();

    public IReadOnlyList<TabPannel> Pages => _pages;

    [Parameter] 
    public RenderFragment ChildContent { get; set; }

    public TabPannel ActivePage { get; private set; }

    public void AddPage(TabPannel tabPage) {
        _pages.Add(tabPage);
        if (_pages.Count == 1) {
            ActivePage = tabPage;
        }
        StateHasChanged();
    }
    
    protected void ActivatePage(TabPannel page) {
        ActivePage = page;
    }

    protected string GetButtonClass(TabPannel page) {
        return page == ActivePage 
            ? "btn-primary" 
            : "btn-secondary";
    }
}
